@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<div class="container">
    <h1 class="mb-4">Recent Audit Records</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Entity Name</th>
                <th>Entity ID</th>
                <th>Action</th>
                <th>Created By</th>
                <th>Created Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var audit in Model.AuditRecords)
            {
                <tr>
                    <td>@audit.Id</td>
                    <td>@audit.EntityName</td>
                    <td>@audit.EntityId</td>
                    <td>@audit.Action</td>
                    <td>@audit.CreatedBy</td>
                    <td>@audit.CreatedDate.ToString("yyyy-MM-dd HH:mm:ss")</td>
                </tr>
            }
        </tbody>
    </table>
</div>